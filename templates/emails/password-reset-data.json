{
  "templateName": "Password Reset Email",
  "description": "Email sent when user requests password reset",
  "variables": {
    "firstName": {
      "type": "string",
      "description": "User's first name",
      "example": "John"
    },
    "email": {
      "type": "string",
      "description": "User's email address",
      "example": "john@example.com"
    },
    "accountType": {
      "type": "string",
      "description": "Type of user account",
      "example": "Hospital Partner"
    },
    "resetUrl": {
      "type": "string",
      "description": "URL to reset password with token",
      "example": "https://medconnect.com/reset-password?token=abc123"
    },
    "expirationTime": {
      "type": "string",
      "description": "How long the reset link is valid",
      "example": "24 hours"
    },
    "requestTime": {
      "type": "string",
      "description": "When the reset was requested",
      "example": "January 15, 2024 at 2:30 PM"
    },
    "supportEmail": {
      "type": "string",
      "description": "MedConnect support email",
      "example": "support@medconnect.com"
    },
    "unsubscribeUrl": {
      "type": "string",
      "description": "URL to unsubscribe from emails",
      "example": "https://medconnect.com/unsubscribe"
    }
  },
  "usage": "Send this email when user requests to reset their password"
}
